<!DOCTYPE html>
<html lang="en">

  <head>
    <meta charset="utf-8">
    <title>tabibuddy | View Buddies</title>
    
    <link href="https://fonts.googleapis.com/css?family=Raleway:400,500,500i,600,800" rel="stylesheet">
    <link rel='stylesheet' href="/stylesheets/top_bar_style.css" />
    <link rel='stylesheet' href="/stylesheets/buddy_search_style.css" />

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script src="/js/top_bar.js"></script>
    <script src="/js/buddy_search.js"></script>

  </head>
  <body rel="{{placeID}}">

    {{> top_bar showSearchBar=showSearchBar loggedIn=loggedIn isTabiSearch=isTabiSearch}}

    <div class="background-container">
      <img src="/images/buddy-search-background.jpg">
    </div>

    <div id="filter-by-container">
      <form>
        <h1>Filter By</h1>
      </form>
    
    </div><div id="search-results-container">

      {{#each users}}
        <div class="search-result">
          <div class="user" rel="{{userID}}">
            <div class="user-image-container">
              <img class="user-image" src="{{userImageURL}}">
            </div><div class="username-container">
              <h1 class="username">{{username}}</h1>
            </div>
            {{#each tripImages}}
              <img class="trip-image" src="{{tripImageURL}}">
            {{/each}}
          </div>
        </div>
      {{/each}}

      {{#if noBuddies}}
        <div id="suggestion-container">
          <p>There are no users to show for this location yet.</p>
          <p>Still looking for travel buddies?</p>
          <p>Try our most popular destinations:</p>
          <p>
            {{#each suggestions}}
                <label class="suggestion-place" rel="{{placeID}}"><u>{{placeName}}</u></label>
              <br>
            {{/each}}
          </p>
        </div>
        
        <form method="get" action="/buddy_search" id="suggestion-search-form" class="invisible">
          <input id="suggested-place-name" type="text" name="buddy_destination_name">
          <input id="suggested-place-id" type="text" name="buddy_destination_id">
        </form>

        <div id="suggestion-background"></div>
      {{/if}}

    </div>

    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyB8lG_CLlQVPpyRbKhHHUe0vZYjFnCPTNs&libraries=places&callback=initMap" async defer></script>

  </body>
</html>

