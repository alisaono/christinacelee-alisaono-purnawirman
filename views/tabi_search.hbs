<!DOCTYPE html>
<html>
  <head>
    <title>Tabi Search Results</title>

    <link rel='stylesheet' href="/stylesheets/tabi_search_style.css" />

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
<!--     <script src="https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/2.0.0/handlebars.js"></script> -->

    <script src="/js/tabi_search.js"></script>

  </head>
  <body>
    <div id="top-bar">Placeholder for top bar</div>
    <div id="filter-by-container">
      <form>
        <h1>Filter By</h1>
        <h2>Category</h2>
          <input type="checkbox" name="category" value="Adventure">Adventure<br>
          <input type="checkbox" name="category" value="Food">Food<br>
          <input type="checkbox" name="category" value="Art">Art<br>
          <input type="checkbox" name="category" value="History">History<br>
        <h2>Date</h2>
          <input type="checkbox" name="date" value="2016Winter">2016 Winter<br>
          <input type="checkbox" name="date" value="2016Fall">2016 Fall<br>
          <input type="checkbox" name="date" value="2016Summer">2016 Summer<br>
          <input type="checkbox" name="date" value="2016Spring">2016 Spring<br>
        <h2>Duration</h2>
          <input type="checkbox" name="duration" value="DayTrip">Day Trip<br>
          <input type="checkbox" name="duration" value="Short">Short(1~3 days)<br>
          <input type="checkbox" name="duration" value="Medium">Medium(4~7 days)<br>
          <input type="checkbox" name="duration" value="Long">Long(8+ days)<br>            
        <h2>Budget</h2>
          <input type="checkbox" name="budget" value="Low">Low(~$300)<br>
          <input type="checkbox" name="duration" value="Medium">Medium($300~800)<br>
          <input type="checkbox" name="duration" value="High">High($800~)<br>   
      </form>
  
    </div><div id="search-results-container">
      <!-- <script id="hbtemplate" type="text/x-handlebars-template"> -->
        {{#each trips}}
          <div class="search-result">
            <div class="trip" rel="{{tripID}}">
              <div class="trip-title-container">
                <h1 class="trip-title">{{tripTitle}}</h1>
              </div><div class="trip-like-container">
                {{#if liked}}
                  <img class="trip-unlike" rel="{{tripID}}" src="/images/unlike.png">
                {{else}}
                  <img class="trip-like" rel="{{tripID}}" src="/images/like.png">
                {{/if}}
              </div>
              <img class="trip-image" src="{{imageURL}}">
              <p class="trip-author" rel="{{userID}}">By {{username}}</p>
              <p class="trip-description text-hidden">{{description}}</p>
            </div>
          </div>
        {{/each}}
<!--       </script> -->
    </div>

    <div id="trip-popup-container" class="popup-inactive">
      <div id="background-blur">
      </div>
      
      <div id="trip-popup-close">
        <img id="trip-popup-close-icon" src="/images/close.png" />
      </div>

      <div id="trip-popup" rel="">
      </div>
    </div>

  </body>
</html>

