<!DOCTYPE html>
<html>
  <head>
    <title>Tabi Search Results</title>
<!--     <link rel='stylesheet' href='/stylesheets/base.css' />
    <link rel='stylesheet' href='/stylesheets/style.css' /> -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
<!--     <script src="tabi_search.js"></script> -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/2.0.0/handlebars.js"></script>

    <script>
      var main = function() {
          var data = {trips:[{tripTitle: "test1", username: "user1", description: "this is test description1", liked: true, imageURL:'http://placekitten.com/g/150/150'},{tripTitle: "test2", username: "user2", description: "this is test description2", liked:false, imageURL:'http://placekitten.com/g/150/150'}]};

          var source = $("#hbtemplate").html();
          var template = Handlebars.compile(source);

          $('#search-results-container').append(template(data));
      } 

      $(document).ready(main);
    </script>

    <style type="text/css">
      body {
        margin: 0;
      }
      #top-bar {
        width: 100%;
        height: 50px;
        background-color: pink;
        text-align: center;
        position: fixed;
      }
      #filter-by-container {
        width: 22%;
        display: inline-block;
        margin-top: 50px;
      }
      #filter-by-container form {
        border: 2px solid black;
        margin: 10px;
        padding-left: 15px;
        padding-bottom: 15px;
      }
      #search-results-container {
        width: 77%;
        display: inline-block;
        vertical-align:top;
        margin-top: 50px;
      }
      .search-result {
        width: 25%;
        display: inline-block;
        text-align: center;
      }
      .trip {
        margin: 10px;
        padding: 10px;
        border: 2px solid black;
        border-radius: 10px
      }
      .trip-title-container {
        width: 85%;
        display: inline-block;
      }
      .trip-title {
        margin: 0;
        text-align: left;
      }
      .trip-like-container {
        width: 15%;
        display: inline-block;
        vertical-align: top;
      }
      .trip-like {
        width: 100%;
        vertical-align: top;
      }
      .trip-author, .trip-description {
        margin: 0;
        margin-top: 10px;
      }
      .trip-image {
        width: 100%;
        margin: 0;
        margin-top: 10px;
      }

    </style>

  </head>
  <body>
    <div id="top-bar">Placeholder for top bar</div>
    <div id="filter-by-container">
      <form>
        <h1>Filter By</h1>
        <h2>Category</h2>
          <input type="checkbox" name="category" value="Adventure">Adventure<br>
          <input type="checkbox" name="category" value="Food">Food<br>
          <input type="checkbox" name="category" value="Art">Art<br>
          <input type="checkbox" name="category" value="History">History<br>
        <h2>Date</h2>
          <input type="checkbox" name="date" value="2016Winter">2016 Winter<br>
          <input type="checkbox" name="date" value="2016Fall">2016 Fall<br>
          <input type="checkbox" name="date" value="2016Summer">2016 Summer<br>
          <input type="checkbox" name="date" value="2016Spring">2016 Spring<br>
        <h2>Duration</h2>
          <input type="checkbox" name="duration" value="DayTrip">Day Trip<br>
          <input type="checkbox" name="duration" value="Short">Short(1~3 days)<br>
          <input type="checkbox" name="duration" value="Medium">Medium(4~7 days)<br>
          <input type="checkbox" name="duration" value="Long">Long(8+ days)<br>            
        <h2>Budget</h2>
          <input type="checkbox" name="budget" value="Low">Low(~$300)<br>
          <input type="checkbox" name="duration" value="Medium">Medium($300~800)<br>
          <input type="checkbox" name="duration" value="High">High($800~)<br>   
      </form>
  
    </div><div id="search-results-container">
      <script id="hbtemplate" type="text/x-handlebars-template">
        {{#each trips}}
          <div class="search-result">
            <div class="trip">
              <div class="trip-title-container">
                <h1 class="trip-title">{{tripTitle}}</h1>
              </div><div class="trip-like-container">
                {{#if liked}}
                  <img class="trip-like" src="data:image/png;base64,">
                {{else}}
                  <img class="trip-like" src="data:image/png;base64,">
                {{/if}}
              </div>
              <img class="trip-image" src="{{imageURL}}">
              <p class="trip-author">By {{username}}</p>
              <p class="trip-description">{{description}}</p>
            </div>
          </div>
        {{/each}}
      </script>
    </div>
  </body>
