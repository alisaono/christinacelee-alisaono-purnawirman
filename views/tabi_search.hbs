<!DOCTYPE html>
<html lang="en">

  <head>
    <meta charset="utf-8">
    <title>tabibuddy | View Tabies</title>

    <link href="https://fonts.googleapis.com/css?family=Raleway:400,500,500i,600,800" rel="stylesheet">
    <link rel='stylesheet' href="/stylesheets/top_bar_style.css" />
    <link rel='stylesheet' href="/stylesheets/tabi_search_style.css" />

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script src="/js/top_bar.js"></script>
    <script src="/js/tabi_search.js"></script>

  </head>
  <body rel="{{placeID}}">
  
    {{> top_bar showSearchBar=showSearchBar loggedIn=loggedIn isTabiSearch=isTabiSearch}}

    <div class="background-container">
      <img src="/images/tabi-search-background.jpg">
    </div>

    <div id="filter-by-container">
      <form>
        <h1>Filter By</h1>
      </form>
  
    </div><div id="search-results-container">

        {{#each trips}}
          <div class="search-result">
            <div class="trip" rel="{{tripID}}">
              <div class="trip-title-container">
                <h1 class="trip-title">{{tripTitle}}</h1>
              </div><div class="trip-like-container">
                {{#if liked}}
                  <img class="trip-unlike" rel="{{tripID}}" src="/images/unlike.png">
                {{else}}
                  <img class="trip-like" rel="{{tripID}}" src="/images/like.png">
                {{/if}}
              </div>
              <img class="trip-image" src="{{imageURL}}">
              <p class="trip-author" rel="{{userID}}">By {{username}}</p>
              <p class="trip-description text-hidden">{{description}}</p>
            </div>
          </div>
        {{/each}}


        {{#if noTrips}}
          <div id="suggestion-container">
            <p>There are no trips to show for this location yet.</p>
            <p>Still looking for trip inspirations?</p>
            <p>Try our most popular destinations:</p>
            <p>
              {{#each suggestions}}
                  <label class="suggestion-place" rel="{{placeID}}"><u>{{placeName}}</u></label>
                <br>
              {{/each}}
            </p>
          </div>
          
          <form method="get" action="/tabi_search" id="suggestion-search-form" class="invisible">
            <input id="suggested-place-name" type="text" name="tabi_destination_name">
            <input id="suggested-place-id" type="text" name="tabi_destination_id">
          </form>

          <div id="suggestion-background"></div>
        {{/if}}

    </div>

    <div id="trip-popup-container" class="popup-inactive">
      <div id="background-blur">
      </div>
      
      <div id="trip-popup-close">
        <img id="trip-popup-close-icon" src="/images/close.png" />
      </div>

      <div id="trip-popup" rel="">
      </div>
    </div>

    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyB8lG_CLlQVPpyRbKhHHUe0vZYjFnCPTNs&libraries=places&callback=initMap" async defer></script>

  </body>
</html>

