<div id="top-bar">
  <div id="logo-container">
    <img id="logo" src="/images/tabibuddy-logo.png">
  </div>

  {{#if showSearchBar}}
    <div id="top-search-bar-container">
      <div id="search-icon-container">
        <img src="/images/search.png" />
      </div>
      {{#if isTabiSearch}}
        <form id="new-search-form" name="tabi_destination_form" method="get" action="/tabi_search">
          <input id="auto-completion" placeholder="{{placeName}}">
          <input id="tabi-place-name" type="text" name="tabi_destination_name" class="invisible">
          <input id="tabi-place-id" type="text" name="tabi_destination_id" class="invisible">
          <div id="search-button">Search</div>
        </form>
      {{else}}
        <form id="new-search-form" name="buddy_destination_form" method="get" action="/buddy_search">
        <input id="auto-completion" placeholder="{{placeName}}">
          <input id="buddy-place-name" type="text" name="buddy_destination_name" class="invisible">
          <input id="buddy-place-id" type="text" name="buddy_destination_id" class="invisible">
          <div id="search-button">Search</div>
        </form>
      {{/if}}
    </div>
  {{/if}}

  <div id="user-option">

  <div id="user-hello">
    <p>Hello, {{loggedInUser}}!</p>
  </div>

    <div id="top-user-image-container">
      <img id="top-user-image" src="/images/user-icon.png">
    </div>

    <div id="user-dropdown-container">
      {{#if loggedIn}}
        <div id="user-dropdown-profile" class="user-dropdown">My Profile</div>
        <div id="user-dropdown-create" class="user-dropdown">Create Trip</div>
        <div id="user-dropdown-logout" class="user-dropdown">Log Out</div>
      {{else}}
        <div id="user-dropdown-login" class="user-dropdown">Log In with Facebook</div>
      {{/if}}
    </div>
  </div>
</div>