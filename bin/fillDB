/* This is to fill the fake data in the database */

// get the User, trip, and destination model
var User = require('../schemas/user');
var Trip = require('../schemas/trip');
var Destination = require('../schemas/destination');
var chalk = require('chalk')

/* Adding new user to the database */
var addNewUser = function(userInfo){
  // check if userID already exist
  User.findOne({'userID': userInfo.userID}, function(err, user){
    if(err){
      console.log(chalk.red("Error in addNewUser"));
      return;
    }
    if(user != null){
      console.log(chalk.yellow("User already exist in database"));
      return;
    }
  });
  // if not existed before, create a new user
  var newUser = new User(userInfo);
  newUser.save();

  var destinationID;
  if(userInfo.hasOwnProperty("userDestinationID")){
    for(destinationID: userInfo.userDestinationID){
      Destination.findOne({'destinationID': destinationID}, function(err, destination){
        destination.buddies.push(userInfo.userID);
        destination.save();
      });
    }
  }
}

